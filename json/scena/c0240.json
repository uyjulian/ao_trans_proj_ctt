[
  {
    "Text": "hikari00_add",
    "Translation": ""
  },
  {
    "Text": "hikari01_add",
    "Translation": ""
  },
  {
    "Text": "hikari00_add",
    "Translation": ""
  },
  {
    "Text": "hikari01_add",
    "Translation": ""
  },
  {
    "Text": [
      "湿地帯にあんなものが現れて……\u0001",
      "不安だけど、仕事はちゃんと\u0001",
      "やっておかないと。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "シュリちゃんだって、\u0001",
      "ずっとアルカンシェルで\u0001",
      "練習をがんばってるみたいだし！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "イリア様が戻ってきた時のためにも\u0001",
      "しっかりアパートを綺麗にしなきゃね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "シュリちゃんだって、\u0001",
      "ずっとアルカンシェルで\u0001",
      "練習をがんばってるみたいだし！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "イリア様が戻ってきた時のためにも\u0001",
      "しっかりアパートを綺麗にしなきゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ああっ、どうしよう……\u0001",
      "街でこんな事が起こるなんて。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "と、とにかく、部屋にいる皆さんに\u0001",
      "外に出ないよう呼びかけないと。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "あの襲撃事件……\u0001",
      "黒幕は帝国だったそうね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "絶対に許せないわ。\u0001",
      "あの事件でイリア様は……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "このマンションの\u0001",
      "３階に住んでたのは、\u0001",
      "イリア様だったのね……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "荷物を取りに来てた\u0001",
      "シュリちゃんを見て、\u0001",
      "ようやく気づいたわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "……本当なら嬉しいのに、\u0001",
      "イリア様があんなことに\u0001",
      "なっちゃうなんて……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "シュリちゃん、\u0001",
      "ずっと生気がない顔をしているの。\u0001",
      "かわいそうに……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "はあ、何とか元気を\u0001",
      "取り戻してくれるといいけど。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "《金の太陽、銀の月》の\u0001",
      "リニューアル公演……\u0001",
      "いよいよ今夜なのよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "残念ながらチケットは\u0001",
      "買えなかったけど……\u0001",
      "私はここで応援するわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "はあ、シュリちゃんの勇姿、\u0001",
      "見たかったなあ……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "《金の太陽、銀の月》の\u0001",
      "リニューアル公演……\u0001",
      "いよいよ今夜なのよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "はあ、シュリちゃんの勇姿、\u0001",
      "見たかったなあ……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "今朝早くシュリちゃんが\u0001",
      "出かけていったのよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "最近なんだか\u0001",
      "気が張ってるみたいだし……\u0001",
      "ちょっと心配なのよね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "やっぱりリニューアル公演が\u0001",
      "プレッシャーなのかしら……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "シュリちゃん、\u0001",
      "やっぱりリニューアル公演が\u0001",
      "プレッシャーなのかしら……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "私がしっかりと\u0001",
      "応援してあげなきゃね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "さ、さっき……\u0001",
      "３階のシュリちゃんの部屋から\u0001",
      "イリア様が出て行ったのよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "あ、挨拶されちゃった……\u0001",
      "うれしすぎて泣いちゃいそう！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "イリア様、シュリちゃんの部屋に\u0001",
      "遊びに来てたのかしらね。\u0001",
      "はあ、うらやましい……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00006F",
      "（いや、本当はイリアさんの\u0001",
      "  部屋なんだけどな……）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "はあ、イリア様が遊びにくるなんて、\u0001",
      "シュリちゃんうらやましい……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "まあいっか……\u0001",
      "イリア様を間近で見られて\u0001",
      "すごいラッキーだったし。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ルーヴィックさんとこは\u0001",
      "お掃除終わりっと……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "えっと、次は３階かしら。\u0001",
      "また散らかってそうねえ……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ルーヴィックさん、\u0001",
      "奥さんを連れてドライブに\u0001",
      "行ってるみたいよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "国境門あたりまで\u0001",
      "車を走らせるって言ってたわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "まさに悠々自適な老後よね。\u0001",
      "うらやましいわ～。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "あれ、そういえば……\u0001",
      "ルーヴィックさんと奥さんって\u0001",
      "夫婦喧嘩してた気が……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "……まあいっか。\u0001",
      "とにかく、たのまれた\u0001",
      "お掃除をしないとね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "今度のアルカンシェルの\u0001",
      "リニューアル公演……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "３階に住んでるシュリちゃんが\u0001",
      "準主人公の一人に大抜擢された\u0001",
      "みたいなのよ！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "キャー、すごいわよね！\u0001",
      "ほんと見てみたいわ！！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ああっ……\u0001",
      "シュリちゃんの晴れ舞台、\u0001",
      "見てみたいっ……！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "……でも、チケットは\u0001",
      "買い逃しちゃったのよね。\u0001",
      "はあぁ～……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ルーヴィックさんのお宅、\u0001",
      "夫婦喧嘩中みたいね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "集金に行ったら\u0001",
      "空気が重くて重くて……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "はあ、当事者でもないのに\u0001",
      "妙に気を使っちゃったわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ルーヴィックさんとオリガさん、\u0001",
      "夫婦喧嘩中みたいね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "はあ、勘弁してほしいわ。\u0001",
      "気を使っちゃうじゃない……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "今日は各国の首脳が\u0001",
      "アルカンシェルを観劇している\u0001",
      "らしいわね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "うーん、さぞ、いい席で\u0001",
      "楽しんでるんでしょうね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "くう～、うらやましいわ！\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "結局、今度のリニューアル公演の\u0001",
      "チケットは買い逃しちゃったのよね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "はーあ……\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "ねえ聞いた？　噂じゃ、\u0001",
      "あの《金の太陽、銀の月》が\u0001",
      "リニューアルするそうじゃない。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "う～ん、楽しみよね。\u0001",
      "早速チケットを買いに行かないと！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "アルカンシェルの\u0001",
      "《金の太陽、銀の月》が\u0001",
      "リニューアルするらしいわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "これは絶対に見逃せないわ……\u0001",
      "早速チケットを買いに行かないと！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "１階のルーヴィックさんに、\u0001",
      "マンションの改築工事を\u0001",
      "もちかけられたの。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ミラは全部持つからとか\u0001",
      "言ってたけど、\u0001",
      "結局奥さんが止めに来たわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "いやー、びっくりしたわよ。\u0001",
      "そもそも雇われ管理人の\u0001",
      "私に言われても……ねぇ？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ルーヴィックさんって、\u0001",
      "元議員ですごく裕福なのよね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "だからといって、\u0001",
      "マンションを改築しようとか\u0001",
      "なかなか思いつかないと思うけど。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "３階の人とは、\u0001",
      "いつもタイミングが悪くて\u0001",
      "会えてなかったんだけど……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "今朝、鉢合わせして\u0001",
      "やっとご挨拶できたのよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "シュリっていう女の子で、\u0001",
      "なんとアルカンシェルの見習いを\u0001",
      "やってるんですって！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "んふふ、まだまだ無名みたいだけど、\u0001",
      "これからチェックしていかないとね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00005F",
      "（確かシュリって、\u0001",
      "  イリアさんの部屋の\u0001",
      "  居候だよな……？）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00100F",
      "（３階がイリアさんの\u0001",
      "  部屋ってことに、\u0001",
      "  気づいてないみたいね。）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "でも、アルカンシェルって\u0001",
      "やっぱり給料がいいのね～。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "見習いの子でも、こんなに大きな\u0001",
      "マンションに住めちゃうんだから。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00006F",
      "（本当はイリアさんの\u0001",
      "  部屋だからなあ……）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "私はこのアパートで\u0001",
      "雇われ管理人を\u0001",
      "してるんだけど……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ここはほんと、\u0001",
      "広くて綺麗でいいわね。\u0001",
      "私もこんなところに住みたいわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "……広すぎて、\u0001",
      "ちょっと掃除が大変だけどね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ええっと、あとは中庭の\u0001",
      "掃除もしないと……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "ふう、雇われ管理人も大変よね。\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "大統領は、オルキスタワーの内部に\u0001",
      "怪しげな施設を建造していたそうだな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "私が外観デザインを手がけた\u0001",
      "オルキスタワーに怪しげな手を加え、\u0001",
      "それを悪用していたなど……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "我々はみんな騙されていたのだ。\u0001",
      "やれやれ、到底許す事はできんよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "大統領は、オルキスタワーの内部に\u0001",
      "怪しげな施設を建造していたそうだな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "我々はみんな騙されていたのだ。\u0001",
      "やれやれ、到底許す事はできんよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "だ、大統領め……\u0001",
      "まさかここまでの事をやるとは！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "オルキスタワーの外観デザインを\u0001",
      "任せてくれたことには\u0001",
      "感謝していたものだったが……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "もはや信用することはできんな。\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "大統領め……\u0001",
      "もはや信用することはできんな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "こうなってしまっては、\u0001",
      "帝国や共和国での仕事は\u0001",
      "受けることはできないか……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "くっ、せめて今進めている仕事は\u0001",
      "終わらせておきたかったが……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "オルキスタワーは\u0001",
      "アリオス殿のおかげで\u0001",
      "守られたそうだが……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ＩＢＣビルは残念だった。\u0001",
      "あれもまたクロスベルの\u0001",
      "象徴というべきものなのに……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "襲撃犯どもはクロスベルの\u0001",
      "歴史そのものを侮辱したに等しい。\u0001",
      "全く許し難いやつらだ……！\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ＩＢＣビルはクロスベルを\u0001",
      "象徴する建造物だったのに……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "襲撃犯め、全く許し難い……！\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "………………………………\u0001",
      "…………………………はっ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "……何か用かね？\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "図面を引くのに集中しててな、\u0001",
      "悪いが邪魔をしないでくれるか。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "最近、仕事によく\u0001",
      "集中できるのだ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "周りがあまり見えないのが\u0001",
      "欠点ではあるがな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "雨音というのは、\u0001",
      "どうしてこうも\u0001",
      "心地いいのだろう。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "何だか図面をひくのも\u0001",
      "はかどるような気がするな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "むう……\u0001",
      "やけに通りが騒がしいな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "しかし、あのサイレンは……\u0001",
      "事故でもあったのだろうか？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "私は、偉大な建築家である祖父に\u0001",
      "少しは近づけているのだろうか……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "……うむ、今はとにかく仕事だな。\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "たしか、帝国から\u0001",
      "図面の依頼が来ていたはず……\u0001",
      "そちらに取り掛かってみるか。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "オルキスタワーのお披露目が\u0001",
      "終わったあとから、肩の荷が下りた。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "これからは心機一転して、\u0001",
      "色々な仕事を手がけたいものだ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "私はオルキスタワーの\u0001",
      "外観デザインを手がけたのだが、\u0001",
      "導力ネット関係がよく分からなくてな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "内部の図面は市長が推薦する\u0001",
      "他の建築家に任せたのだよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "いや、他人と協力する事の大切さを\u0001",
      "身をもって教えられた気がしたな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "オルキスタワー内部の図面は\u0001",
      "市長が推薦する\u0001",
      "他の建築家に任せたのだよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "他人と協力する事の大切さを\u0001",
      "身をもって教えられた気がしたよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "オルキスタワーほどの建物が\u0001",
      "ここまでのスピードで完成した背景に、\u0001",
