[
  {
    "Text": "hikari00_add",
    "Translation": ""
  },
  {
    "Text": "hikari01_add",
    "Translation": ""
  },
  {
    "Text": "hikari00_add",
    "Translation": ""
  },
  {
    "Text": "hikari01_add",
    "Translation": ""
  },
  {
    "Text": [
      "クロスベルは日常を\u0001",
      "取り戻しつつあるが、\u0001",
      "まだ問題は山積みじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "国交を断った影響で\u0001",
      "何処の商店も十分な商品を\u0001",
      "揃えられてはおらぬ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "マクダエル議長とも\u0001",
      "連絡を取り合いつつ、\u0001",
      "なんとか対策を考えねばな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "クロスベルは日常を\u0001",
      "取り戻しつつあるが、\u0001",
      "まだ問題は山積みじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "マクダエル議長とも\u0001",
      "連絡を取り合いつつ、\u0001",
      "なんとか対策を考えねばな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ううむ、露店の者たちの\u0001",
      "安否が気がかりじゃな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "戒厳令下でも、どうしても\u0001",
      "商売をつづけたいというから\u0001",
      "許可してしまったが……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "もし、彼らに何かあったら\u0001",
      "わしの責任じゃよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ううむ、露店の者たちの\u0001",
      "安否が気がかりじゃな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "もし、彼らに何かあったら\u0001",
      "戒厳令下の商売を許可した\u0001",
      "わしの責任じゃよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "例のディーター殿の演説……\u0001",
      "マクダエル議長が姿を\u0001",
      "見せていなかったのが気になるが。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "エリィ君、\u0001",
      "何か知ってはおらぬのかね？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00103F",
      "……いえ。\u0001",
      "実は私も少し気になっていまして……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ふむ、そうか……\u0001",
      "さぞ心配じゃろう。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "いずれにせよ\u0001",
      "こうなってしまった以上、\u0001",
      "２大国との対立は避けられまい。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "有事に備えておくように\u0001",
      "商工会から呼びかけねばな……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "こうなってしまった以上、\u0001",
      "２大国との対立は避けられまい。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "有事に備えておくように\u0001",
      "商工会から呼びかけねばな……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ふむ、住民投票も\u0001",
      "間近に迫ったこの時期に、\u0001",
      "かような事件が起こるとは……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "下手をすると、帝国や共和国に\u0001",
      "付け込まれる格好の材料に\u0001",
      "なってしまうかもしれん。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "なんとしても、早急な解決が\u0001",
      "望まれるところじゃな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ただでさえ、\u0001",
      "治安の面で帝国や共和国に\u0001",
      "弱みを見せている現状じゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "なんとしても、早急な解決が\u0001",
      "望まれるところじゃな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "昨日の列車事故は\u0001",
      "得体のしれない化け物の\u0001",
      "仕業だったとか……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ふむ、最近目撃されるという\u0001",
      "不可思議な怪物と\u0001",
      "同じものなのかのう？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "近頃ただでさえ事件が多い。\u0001",
      "諸君らも充分気をつけるのじゃぞ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "列車事故を起こした化け物が\u0001",
      "最近噂される不可思議な怪物と\u0001",
      "同じものかはわからんが……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "近頃ただでさえ事件が多い。\u0001",
      "諸君らも充分気をつけるのじゃぞ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "クロスベル自治州の独立……\u0001",
      "ディーター市長も思い切ったことを\u0001",
      "宣言したものじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "だが、内外への発言力が\u0001",
      "かつてないほどに高まっておる\u0001",
      "今こそが、好機なのは間違いない。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "長い歴史で２大国に支配され続け、\u0001",
      "失われつつあるクロスベルの誇り……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "色々と軋轢はあるだろうが、\u0001",
      "独立の実現という結果を以って\u0001",
      "何としても取り戻してほしいものじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "……そうそう、そんな市長の\u0001",
      "最近の勢いを応援する意味でも、\u0001",
      "ある企画を進めておるのじゃよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "クロスベル通信社と共同の企画じゃ、\u0001",
      "市民も活気付いてくれるじゃろう。\u0001",
      "諸君も、楽しみにしておいてくれ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "ついに通商会議が始まるのう。\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "わしら市民は\u0001",
      "クロスベルタイムズでの\u0001",
      "結果を待つのみじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "さて……\u0001",
      "どんな会議になるのやら。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "本来ならば、ぜひとも\u0001",
      "会議の様子を見たかったものじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "さて……\u0001",
      "どんな会議になるのやら。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "どうやら孫のロイが、\u0001",
      "露店の仕事に興味を\u0001",
      "持ち始めたそうじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "……わしも元は露天商でな。\u0001",
      "ふむ、これも血筋かのう。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ふむ、まさか黒月の\u0001",
      "長老さんのお孫さんが\u0001",
      "ウチに来てくれるなんてね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "何はともあれ、\u0001",
      "この街を気に入ってくれると\u0001",
      "私も嬉しいよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "通商会議では、各国の代表者が\u0001",
      "主に経済関係の取り決めについて\u0001",
      "協議を行う。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "わしら商工会もその動向には\u0001",
      "注目しているのじゃよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "おや、ロイドくんじゃないか。\u0001",
      "一体どうしたね？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00000F",
      "えっと……\u0001",
      "メイリンちゃんは\u0001",
      "ご在宅でしょうか？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ん、さっき帰ってきたと\u0001",
      "思っておったが……\u0001",
      "またどこかに行ったかの？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "すまないが、婆さんに\u0001",
      "聞いてもらえるかな？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "仕事をしていてな。\u0001",
      "孫が出かけたのに\u0001",
      "気づかなんだ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "孫については婆さんに\u0001",
      "聞いてもらえるかな？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "さて、商工会の仕事の\u0001",
      "続きをせねばな……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ロイのやつに\u0001",
      "説教のひとつでも\u0001",
      "してやろうかと思うたが……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "メイリンのいるところで\u0001",
      "やるのもなんじゃな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "今日のところは見逃してやるか。\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "教団事件直前に行われた\u0001",
      "クロスベル予算議会は、\u0001",
      "一旦仕切りなおしになってな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "新市長、新議長が中心となって\u0001",
      "利権が絡まない案へと\u0001",
      "予算が組み直されたんじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "うむ、市政もようやく\u0001",
      "良い方向へと進みはじめた\u0001",
      "ということかのう。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "市政もようやく良い方向へと\u0001",
      "進み始めたようじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "これも新市長と新議長の\u0001",
      "おかげかのう。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "おや……ロイド君に、\u0001",
      "マクダエル議長のお嬢さんか。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "久しぶりじゃのう。\u0001",
      "元気そうで何よりじゃ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00000F",
      "こんにちは、モルス会長。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00100F",
      "ご無沙汰しています。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#10300F",
      "確か、東通りの商人をまとめる\u0001",
      "商工会の会長さんだったね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#10105F",
      "ああ、こちらの方が……\u0001",
      "（母さんも露天商時代に\u0001",
      "  お世話になったんだっけ。）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "うむ、新顔もおるようだし\u0001",
      "いよいよ特務支援課も\u0001",
      "再始動と言ったところか。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "君たちには\u0001",
      "わしら市民も期待しておる。\u0001",
      "がんばってくれたまえよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "君たち特務支援課には\u0001",
      "これからも期待しておるぞ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "何か力になれることがあったら\u0001",
      "いつでも来るといい。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "大統領の拘束を乗り越えて、\u0001",
      "これからどうするか……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "それがクロスベルに住む人々にとって\u0001",
      "何より大事なことだと思うわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "皆で話し合って、きっといい方向に\u0001",
      "物事が進んでいけばいいわね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "これからどうするか……\u0001",
      "クロスベルに住む人々にとって\u0001",
      "それが何より大事なことだと思うわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "皆で話し合って、きっといい方向に\u0001",
      "物事が進んでいけばいいわね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ロイとおじいさんが\u0001",
      "ちゃあんと見張っているから、\u0001",
      "怖いのもここにはこないわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "だからメイリン、\u0001",
      "心配しなくていいからね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ディーターさんの独立宣言……\u0001",
      "時期尚早ではなかったかしら……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "この世のあらゆる物事は\u0001",
      "変わっていくものだとは\u0001",
      "分かっていたつもりだけど……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "いや……クロスベルは既に\u0001",
      "そうも言っていられない状況に\u0001",
      "なってしまっていたのかもね……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "物事の急激な変化は、\u0001",
      "私たち年寄りにとっては\u0001",
      "怖いものがあるわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "クロスベルは既に\u0001",
      "引き返せないところまで\u0001",
      "きてしまっていたのね……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "おじいさんなら、商工会の用事で\u0001",
      "市民会館に行っているわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "今回のチャリティイベントは\u0001",
      "ロイも手伝ってるそうだけど……\u0001",
      "どうなるかしらね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "今はとにかく、女神様に\u0001",
      "お祈りすることしかできないわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "これ以上このクロスベルで\u0001",
      "無駄な血が流れませんように……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "最近は本当に何が起こるか\u0001",
      "分からないわねえ……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ロイやメイリンにも、\u0001",
      "出歩くときには充分に\u0001",
      "気をつけるように言わないと。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "さてと……\u0001",
      "おじいさんとメイリンが\u0001",
      "そろそろ帰る頃かしら。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "紅茶とお菓子を用意して\u0001",
      "待っているとしましょうかね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "おじいさんなら今頃、\u0001",
      "表の通りでメイリンと\u0001",
      "遊んでるんじゃないかしら。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ふふ、おじいさんったら\u0001",
      "久しぶりの休みに孫と遊べて、\u0001",
      "とってもうれしそうだったわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "住民投票については、\u0001",
      "商工会でも手伝いにまわるそうよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "一体どうなるのかしら……\u0001",
      "私にはまったく分からないわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "おじいさん、商工会の長として\u0001",
      "色々と思うところがあるみたいね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "もう年なんですから、\u0001",
      "あまり無理しないように\u0001",
      "してもらわないとね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "以前はおじいさんも\u0001",
      "ロイの無気力ぶりには\u0001",
      "手を焼いていたようだけど……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "この先ロイががんばって、\u0001",
      "ゆくゆくは商工会に……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "なんてことになったら、\u0001",
      "きっと喜ぶわね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "この先ロイががんばって、\u0001",
      "ゆくゆくは商工会に……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "なんてことになったら、\u0001",
      "おじいさん、きっと喜ぶわね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "あらあら、あなたたち。\u0001",
      "今日はまた可愛らしい子を\u0001",
      "連れているのね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "フム、ご夫人。\u0001",
      "お邪魔させてもらっています。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ふふ、どういたしまして。\u0001",
      "あなた随分お行儀がよろしいのね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "よければ紅茶でも飲んでいく？\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "ああいえ、\u0001",
      "長居するつもりはないので\u0001",
      "おかまいなく。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00100F",
      "（ふふ、見事な社交術ね。）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00006F",
      "（なんていうか……）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00300F",
      "（ああ、ソツがねえな。）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#10100F",
      "（ええ、ソツがないですね。）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#10300F",
      "（ああ、ソツがないね。）\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ふふ、本当に\u0001",
      "礼儀正しくて良い子ね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "ロイにも見習わせたいわ。\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "政治の話にはうるさいおじいさんも、\u0001",
      "ディーター市長を\u0001",
      "とても評価しているみたいよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "なんといっても、天下のＩＢＣを\u0001",
      "取り仕切ってきた人ですものね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "きっと通商会議でも\u0001",
      "活躍してくれることでしょう。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "おじいさんも、新しい市長さんを\u0001",
      "とても評価しているみたい。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "きっと通商会議でも\u0001",
      "活躍してくれることでしょう。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ロイとメイリンは、\u0001",
      "この雨の中散歩に行ってしまったわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "そこまで遠くには\u0001",
      "行ってないと思うから、\u0001",
      "近くの街区を探してみてちょうだい。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ロイの緑色の傘か、\u0001",
      "メイリンのピンク色の傘の\u0001",
      "どちらかを探してみるといいわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ロイとメイリンは\u0001",
      "そう遠くに行っていないと思うから、\u0001",
      "近くの街区を探してみてちょうだい。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ロイの緑色の傘か、\u0001",
      "メイリンのピンク色の傘の\u0001",
      "どちらかを探してみるといいわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "孫が２人とも\u0001",
      "帰ってきたことだし……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ホットレモネードでも\u0001",
      "淹れてあげましょうかね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "うーん、雨足は弱いけど\u0001",
      "なかなか止まないわねえ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ロイたち、どこまで\u0001",
      "買い物に行ったのかしら。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "まあまあ、あなたたちは……！\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "#00002F",
      "お婆さん、お久しぶりです。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ええ、こちらこそ。\u0001",
      "元気そうでなによりだわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "おじいさんには\u0001",
      "もう会ったかしら？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "上にいるから、\u0001",
      "よかったら挨拶してあげて\u0001",
      "ちょうだいね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "おじいさんには\u0001",
      "もう会ったかしら？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "上にいるから、\u0001",
      "よかったら挨拶してあげて\u0001",
      "ちょうだいね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "心配すんなって、じいちゃん。\u0001",
      "クロンクさんたちなら\u0001",
      "きっと大丈夫だからさ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "市民会館への問合せも\u0001",
      "出来ない状態だし、\u0001",
      "今は家でじっとしてようぜ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "クロンクさんたちなら\u0001",
      "きっと大丈夫だからさ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "市民会館への問合せも\u0001",
      "出来ない状態だし、\u0001",
      "今は家でじっとしてようぜ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "よお、傘は無事に\u0001",
      "届けてくれたみたいだな。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "今度からは俺ももうちょっと\u0001",
      "しっかりしないとなぁ……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "兄たんとおじいちゃんに、\u0001",
      "ここにいるように言われたの。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "とっても怖いの……\u0002",
    "Translation": ""
  },
  {
    "Text": "もくもく……\u0002",
    "Translation": ""
  },
  {
    "Text": "兄たん、パンおいしーね！\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "#00000F",
      "あの、こんにちは。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "あら、こんにちは。\u0001",
      "こんな雨の中、珍しいわね？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "#00003F",
      "ええ、ちょっと\u0001",
      "聞きたい事がありまして。\u0002",
      "\u0003",
      "#00000F",
      "これに見覚えはありませんか？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "",
    "Translation": ""
  },
  {
    "Text": [
      "\u0007\u0005",
      "ロイドはメイリンの傘を\u0001",
      "夫人に見せた。",
      "\u0007\u0000",
      "\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "あら、これって……\u0001",
      "メイリンの傘じゃないの。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "わざわざ届けてくれたの？\u0002",
    "Translation": ""
  },
  {
    "Text": "あら、でも……\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "あの子がパン屋から\u0001",
      "帰ったとき、ちゃんと\u0001",
      "持ってたと思ったけど。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "#00003F",
      "えっと、実はですね……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "",
    "Translation": ""
  },
  {
    "Text": [
      "\u0007\u0005",
      "ロイドは\u0001",
      "モモの傘探しをしている\u0001",
      "事情を説明した。",
      "\u0007\u0000",
      "\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "あらあら、そういう\u0001",
      "ことだったのね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "そのモモって子には\u0001",
      "悪い事をしたわねぇ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "#10305F",
      "それで、ご夫人。\u0001",
      "お孫さんは今、どこに？\u0002",
      "\u0003",
      "#10300F",
      "見たところこちらには\u0001",
      "いないようだけど。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "ええ、さっきロイと一緒に\u0001",
      "傘を差して散歩に行ったみたいなの。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "……ごめんなさい、\u0001",
      "そういえば行き先を聞くのを\u0001",
      "忘れてしまっていたわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "#10103F",
      "うーん、どうやら入れ違いに\u0001",
      "なっちゃったみたいですね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "#00100F",
      "この雨だし、そこまで遠くには\u0001",
      "行っていないんじゃないかしら。\u0002",
      "\u0003",
      "#00104F",
      "東通りの隣の、\u0001",
      "中央広場か港湾区、旧市街……\u0001",
      "その辺りだと思うわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": "ええ、たぶんその辺りじゃないかしら。\u0002",
    "Translation": ""
  },
  {
    "Text": [
      "ロイの緑色の傘か、\u0001",
      "メイリンのピンク色の傘の\u0001",
      "どちらかを探してみるといいわ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "#10100F",
      "緑色かピンク色の傘……\u0001",
      "確かに目印になりそうですね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "#00000F",
      "ああ、さっそく捜してみよう。\u0002",
      "\u0003",
      "#00004F",
      "それでは、ご協力ありがとうございました。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "いえいえ。\u0001",
      "またいつでも来てちょうだいね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#12P",
      "ふむ、ロイド君たちじゃないか。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#12P",
      "そちらのお子さんは……\u0001",
      "東方風の格好をしているが\u0001",
      "この辺では見ない顔だね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "なるほど、あなたが\u0001",
      "クロスベル商工会の会長さんですね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "ボクの名前はシン。\u0001",
      "《黒月》の将来を背負うオトコです。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#12P",
      "ふむ、《黒月》と言うと\u0001",
      "最近クロスベルにも\u0001",
      "進出してきた東方人街の……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#12P",
      "今、将来を背負うと言ったが、\u0001",
      "もしかして長老会の関係者なのかな？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "ええ、そのものズバリ\u0001",
      "ボクのおじいさまが長老なんです。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "もしかして、\u0001",
      "モルス殿は長老たちとご面識が？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#12P",
      "ああいや、商売を通して\u0001",
      "軽くやり取りしただけで直接\u0001",
      "お会いしたことはないんだけどね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#12P",
      "ふむ、しかし\u0001",
      "長老のお孫さんとだけあって\u0001",
      "随分聡明でいらっしゃる。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#12P",
      "だけど、どうしてまた\u0001",
      "ロイド君たちと一緒に？\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#00009F",
      "いやまあ、\u0001",
      "色々と事情がありまして。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "フフ、この者たちが\u0001",
      "どうしてもボクに市街を\u0001",
      "案内したいと言うものでしてね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "仕方なく付き合ってあげている\u0001",
      "トコロなんですよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#11P",
      "#00306F",
      "おいおい……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#11P",
      "#10106F",
      "えっと……\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#11P",
      "#10306F",
      "ふぅ、やれやれだね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#12P",
      "はは、何だかよく分からないが\u0001",
      "仲が良さそうで結構だね。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#12P",
      "シン君と言ったかな？\u0001",
      "どうかクロスベルの街を\u0001",
      "気に入ってくれると嬉しいよ。\u0002"
    ],
    "Translation": ""
  },
  {
    "Text": [
      "#6P",
      "ええ、ボクもそう思います。\u0001",
      "ではこれにておイトマを。\u0002"
    ],
    "Translation": ""
  }
]